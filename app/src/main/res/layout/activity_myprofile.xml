<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:padding="16dp"
            >



        <include
            android:id="@+id/tool"
            layout="@layout/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="174dp"
        android:layout_height="143dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/imagebackground"
        android:src="@drawable/me" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABDULAZEEZ GBINDINNINUOLA"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:paddingLeft="16dp"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            />

        <TextView
        android:id="@+id/motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track: Android"
            android:layout_below="@id/title"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:fontFamily="serif"
        android:textSize="25sp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country: Nigeria"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:textColor="@android:color/black"
        android:layout_below="@id/motto"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/mail"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: gbindinazeez@gmail.com"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/location"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/number"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number: +2348179082163"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/mail"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/slack"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:text="Slack Username: gbindinazeez"
        android:textSize="25sp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>